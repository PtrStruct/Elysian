<Application x:Class="Elysian.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Elysian"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Elysian.Slider.xaml"/>
                <ResourceDictionary Source="Theme/Elysian.Button.xaml"/>
                <ResourceDictionary Source="Theme/Elysian.CheckBox.xaml"/>
                <ResourceDictionary Source="Theme/Elysian.ListViewItem.xaml"/>
                <ResourceDictionary Source="Theme/Elysian.ProgressBar.xaml"/>
                <ResourceDictionary Source="Theme/Elysian.ComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
